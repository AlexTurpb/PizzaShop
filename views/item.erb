<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
<h2><%= Product.find(params[:id]).title %></h2>
</div>

<div class="container">
	<div class="row">
  	<div class="col">
  	<div class="alert alert-info">
  	<p>	
      <img src="<%= Product.find(params[:id]).image %>" alt="pizza" height="550" width="730">
    </p>
    </div>  
    </div>
    <div class="col">
    <div class="alert alert-info">
    <p>	
      <%= Product.find(params[:id]).description %><hr/>
      Size: <%= Product.find(params[:id]).size %> cm<hr/>
      Price: <%= Product.find(params[:id]).price %> UAH
    	</p>
    </div>
	</div>
</div>