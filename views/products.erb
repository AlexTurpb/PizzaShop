<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
<h2>Some Pizza =^_^=</h2>
</div>

<div class="container">
	<% Product.all.each_slice(3) do |row| %>
	<div class="row">
		<% row.each do |pr| %>	
	    <div class="col-4">
	    <div class="alert alert-info">
	    <p>	
	      Name: <%= pr.title %>
	      <button class="btn btn-success" onclick="add_to_cart()">Add to cart</button><br/>
	      Price: <%= pr.price %><br/><hr/>
      	  <a href="/item/<%=pr.id%>">
	      <img src="<%= pr.image %>" alt="pizza" height="220" width="310">
	      </a> 
	  	</p>  
	    </div>  
	    </div>
	    <%end%>
	</div>
	<%end%>
</div>
