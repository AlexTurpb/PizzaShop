<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
<h2>Some Pizza =^_^=</h2>
</div>

<div class="container">
	<% Product.all.each_slice(3) do |row| %>
	<div class="row">
		<% row.each do |pr| %>	
	    <div class="col-4">
	    <div class="alert alert-info">
	    <p>	
	      Name: <%= pr.title %><br/>
	      Price: <%= pr.price %><br/><hr/>
	      <img src="<%= pr.image %>" alt="pizza" height="220" width="310"> 
	  	</p>  
	    </div>  
	    </div>
	    <%end%>
	</div>
	<%end%>
</div>
